@{
    ViewData["Title"] = "Reportes de Gastos";

    var gastoTotal = ViewData["GastoTotal"] is decimal gt ? gt : 0m;
    var gastoMensual = ViewData["GastoMensual"] is decimal gm ? gm : 0m;
    var gastoSemanal = ViewData["GastoSemanal"] is decimal gs ? gs : 0m;
    var gastoDiario = ViewData["GastoDiario"] is decimal gd ? gd : 0m;
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<style>
    .card:hover {
        transform: scale(1.03);
        transition: transform 0.3s ease;
        cursor: pointer;
    }
</style>

<div class="container mt-5">
    <h1 class="mb-5 text-center fw-bold">📊 Reportes de Gastos</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mb-4 animate__animated animate__fadeIn">
        <div class="col">
            <div class="card text-white bg-primary bg-gradient shadow-sm h-100">
                <div class="card-header"><i class="bi bi-currency-dollar me-2"></i>Gasto Total</div>
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">@gastoTotal.ToString("C")</h4>
                    <p class="card-text mt-auto"><span class="badge bg-light text-dark">Todos los registros</span></p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-info bg-gradient shadow-sm h-100">
                <div class="card-header"><i class="bi bi-calendar3 me-2"></i>Gasto Mensual</div>
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">@gastoMensual.ToString("C")</h4>
                    <p class="card-text mt-auto"><span class="badge bg-light text-dark">Este mes</span></p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-warning bg-gradient shadow-sm h-100">
                <div class="card-header"><i class="bi bi-calendar-week me-2"></i>Gasto Semanal</div>
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">@gastoSemanal.ToString("C")</h4>
                    <p class="card-text mt-auto"><span class="badge bg-light text-dark">Esta semana</span></p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-danger bg-gradient shadow-sm h-100">
                <div class="card-header"><i class="bi bi-calendar-day me-2"></i>Gasto Diario</div>
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">@gastoDiario.ToString("C")</h4>
                    <p class="card-text mt-auto"><span class="badge bg-light text-dark">Hoy</span></p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Index">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver al Panel
        </a>
    </div>
</div>



