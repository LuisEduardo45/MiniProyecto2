@{
    ViewData["Title"] = "Inicio";

    var totalEntradas = (decimal)ViewData["TotalEntradas"];
    var totalGastos = (decimal)ViewData["TotalGastos"];
    var saldo = (decimal)ViewData["Saldo"];
}

<div class="container mt-5">
    <h1 class="mb-4">Panel de Control - Gestión de Gastos</h1>

    <!-- RESUMEN -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3 shadow">
                <div class="card-header">Gastos Total del mes</div>
                <div class="card-body">
                    <h4 class="card-title">@totalGastos.ToString("C")</h4>
                    <p class="card-text">Suma de todos los gastos registrados.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success mb-3 shadow">
                <div class="card-header">Entradas Totales</div>
                <div class="card-body">
                    <h4 class="card-title">@totalEntradas.ToString("C")</h4>
                    <p class="card-text">Total de ingresos registrados en el mes.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-dark mb-3 shadow">
                <div class="card-header">Saldo Disponible</div>
                <div class="card-body">
                    <h4 class="card-title">@saldo.ToString("C")</h4>
                    <p class="card-text">Ingresos - Gastos del mes actual.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- NAVEGACIÓN A FUNCIONES -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card p-3 shadow-sm h-100">
                <h5>Categorías</h5>
                <p>Crear, editar y asignar porcentajes de gasto.</p>
                <a class="btn btn-outline-primary" asp-controller="Categoria" asp-action="Create">Registrar nueva categoría</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3 shadow-sm h-100">
                <h5>Registrar Gasto</h5>
                <p>Ingresa un nuevo gasto por categoría y fecha.</p>
                <a class="btn btn-outline-danger" asp-controller="Gasto" asp-action="Create">Registrar nuevo gasto</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3 shadow-sm h-100">
                <h5>Registrar Entrada</h5>
                <p>Agrega una entrada de dinero mensual.</p>
                <a class="btn btn-outline-success" asp-controller="Entrada" asp-action="Create">Registrar nuevo ingreso</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3 shadow-sm h-100">
                <h5>Reportes</h5>
                <p>Visualiza los gastos diarios, semanales, mensuales.</p>
                <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Reportes">Ver Reportes</a>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                    <i class="bi bi-bar-chart-fill mb-3" style="font-size: 2.5rem; color:#0d6efd;"></i>
                    <h5 class="card-title">Reporte Detallado de Gastos</h5>
                    <p class="card-text">Consulta y analiza tus gastos por categoría y mes.</p>
                    <a asp-controller="Reporte" asp-action="Index" class="btn btn-primary mt-auto">Ver Reporte</a>
                </div>
            </div>
        </div>
    </div>


</div>

