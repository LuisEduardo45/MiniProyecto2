@{
    ViewData["Title"] = "Inicio";

    var totalEntradas = (decimal?)(ViewData["TotalEntradas"]) ?? 0m;
    var totalGastos = (decimal?)(ViewData["TotalGastos"]) ?? 0m;
    var saldo = (decimal?)(ViewData["Saldo"]) ?? 0m;
}


<div class="container mt-5">
    <h1 class="mb-4 text-center fw-bold">Panel de Control</h1>

    <!-- RESUMEN -->
    <div class="row mb-5 g-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white rounded-4 shadow h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-cash-stack me-2" style="font-size: 1.8rem;"></i>
                        <h5 class="card-title mb-0">Gastos Totales</h5>
                    </div>
                    <h3 class="fw-bold">@totalGastos.ToString("C")</h3>
                    <p class="card-text">Suma total de tus gastos este mes.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-success text-white rounded-4 shadow h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-wallet2 me-2" style="font-size: 1.8rem;"></i>
                        <h5 class="card-title mb-0">Entradas Totales</h5>
                    </div>
                    <h3 class="fw-bold">@totalEntradas.ToString("C")</h3>
                    <p class="card-text">Total de ingresos registrados.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark text-white rounded-4 shadow h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-piggy-bank me-2" style="font-size: 1.8rem;"></i>
                        <h5 class="card-title mb-0">Saldo Disponible</h5>
                    </div>
                    <h3 class="fw-bold">@saldo.ToString("C")</h3>
                    <p class="card-text">Diferencia entre ingresos y gastos.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- NAVEGACIÓN A FUNCIONES -->
    <h4 class="mb-4 text-muted">Acciones Rápidas</h4>
    <div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
        <div class="col">
            <div class="card h-100 shadow-sm text-center p-3">
                <i class="bi bi-tags-fill text-primary mb-2" style="font-size: 2rem;"></i>
                <h5 class="card-title">Categorías</h5>
                <p class="card-text">Crea y edita categorías de gasto.</p>
                <a class="btn btn-outline-primary" asp-controller="Categoria" asp-action="Create">Nueva Categoría</a>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm text-center p-3">
                <i class="bi bi-cart-plus-fill text-danger mb-2" style="font-size: 2rem;"></i>
                <h5 class="card-title">Registrar Gasto</h5>
                <p class="card-text">Agrega un nuevo gasto fácilmente.</p>
                <a class="btn btn-outline-danger" asp-controller="Gasto" asp-action="Create">Nuevo Gasto</a>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm text-center p-3">
                <i class="bi bi-currency-dollar text-success mb-2" style="font-size: 2rem;"></i>
                <h5 class="card-title">Registrar Entrada</h5>
                <p class="card-text">Agrega ingresos mensuales rápidamente.</p>
                <a class="btn btn-outline-success" asp-controller="Entrada" asp-action="Create">Nuevo Ingreso</a>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm text-center p-3">
                <i class="bi bi-bar-chart-line-fill text-secondary mb-2" style="font-size: 2rem;"></i>
                <h5 class="card-title">Ver Reportes</h5>
                <p class="card-text">Consulta reportes por período de tiempo.</p>
                <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Reportes">Reportes</a>
            </div>
        </div>
    </div>

    <!-- EXTRA: Reporte Detallado -->
    <div class="text-center mt-5">
        <div class="card shadow-sm rounded-4 mx-auto" style="max-width: 400px;">
            <div class="card-body">
                <i class="bi bi-graph-up-arrow text-primary mb-3" style="font-size: 2.5rem;"></i>
                <h5 class="card-title">Reporte Detallado</h5>
                <p class="card-text">Analiza tus gastos por categoría y mes.</p>
                <a asp-controller="Reporte" asp-action="Index" class="btn btn-primary">Ver Reporte</a>
            </div>
        </div>
    </div>
</div>


