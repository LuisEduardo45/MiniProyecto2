@model IEnumerable<MvcTemplate.Models.Entrada>

@{
    ViewData["Title"] = "Entradas";
}

<h1>Entradas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nueva</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Valor</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entrada in Model)
        {
            <tr>
                <td>@entrada.Descripcion</td>
                <td>@entrada.Valor.ToString("C")</td>
                <td>@entrada.Fecha.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@entrada.Id" class="btn btn-sm btn-warning btn-sm me-1">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@entrada.Id" class="btn btn-sm btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- BOTÓN DE REGRESO AL PANEL -->
<div class="text-end mt-4">
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Volver al Panel</a>
</div>

