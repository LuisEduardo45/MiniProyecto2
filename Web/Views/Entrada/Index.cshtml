@model IEnumerable<MvcTemplate.Models.Entrada>

@{
    ViewData["Title"] = "Entradas";
}

<h1>Entradas</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear Nueva Entrada</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Valor</th>
            <th>Fecha</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descripcion</td>
                <td>@item.Valor.ToString("C")</td>
                <td>@item.Fecha.ToShortDateString()</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
