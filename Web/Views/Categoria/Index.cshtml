@model List<MvcTemplate.Models.Categoria>
@{
    ViewData["Title"] = "Categorías";
}

<h2>Categorías</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Crear nueva categoría</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Porcentaje Máximo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Titulo</td>
                <td>@cat.Descripcion</td>
                <td>@cat.PorcentajeMaximo %</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-warning btn-sm me-1">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- BOTÓN DE REGRESO AL PANEL -->
<div class="text-end mt-4">
    <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Index">
        <i class="bi bi-arrow-left-circle me-1"></i> Volver al Panel
    </a>
</div>
