@model MvcTemplate.Models.Gasto

@{
    ViewData["Title"] = "Crear Gasto";
}

<h2>Nuevo Gasto</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Categoría</label>
        <select asp-for="CategoriaId" asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Titulo"))" class="form-control">
            <option value="">-- Seleccione una categoría --</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

