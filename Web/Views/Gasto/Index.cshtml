@model IEnumerable<MvcTemplate.Models.Gasto>

<h1>Listado de Gastos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descripción</th>
            <th>Monto</th>
            <th>Fecha</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gasto in Model)
        {
            <tr>
                <td>@gasto.Id</td>
                <td>@gasto.Descripcion</td>
                <td>@gasto.Monto.ToString("C")</td>
                <td>@gasto.Fecha.ToShortDateString()</td>
                <td>@gasto.Categoria?.Titulo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@gasto.Id" class="btn btn-warning btn-sm me-1">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@gasto.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Nuevo Gasto</a>

<!-- BOTÓN DE REGRESO AL PANEL -->
<div class="text-end mt-4">
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Volver al Panel</a>
</div>




