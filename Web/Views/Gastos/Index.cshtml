@model List<MvcTemplate.Models.Gasto>

@{
    ViewData["Title"] = "Gastos";
}

<h2>Gastos</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Agregar nuevo gasto</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Monto</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gasto in Model)
        {
            <tr>
                <td>@gasto.Descripcion</td>
                <td>$@gasto.Monto</td>
                <td>@gasto.Fecha.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@gasto.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@gasto.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

